{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "baseUrl": "./",
        "outDir": "./dist",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": []
}