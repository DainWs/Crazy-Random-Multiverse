{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ES2022",
    "target": "esnext",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowArbitraryExtensions": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/infrastructure/api/*"],
      "@repositories/*": ["src/infrastructure/repositories/*"],
      "@assets/*": ["src/infrastructure/view/assets/*"],
      "@vue-root/*": ["src/infrastructure/view/vue/*"],
      "@vue-pages/*": ["src/infrastructure/view/vue/pages/*"],
      "@vue-components/*": [
        "src/infrastructure/view/vue/components/*",
        "src/infrastructure/view/vue/pages/settings/components/*",
        "src/infrastructure/view/vue/pages/game/components/*"
      ],

      "@test/*": ["test/*"]
    },
    "types": ["@types/node", "@types/jest", "jest"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["**/*", ".eslintrc.json"]
}
