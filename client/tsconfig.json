{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ES2022",
    "target": "esnext",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowArbitraryExtensions": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@resources/*": ["resources/*"],

      "@assets/*": ["src/view/assets/*"],
      "@components/*": [
        "src/view/components/*",
        "src/view/pages/game/components/*"
      ],
      "@pages/*": ["src/view/pages/*"],
      "@view/*": ["src/view/*"],
      "@repositories/*": ["src/repositories/*"],
      "@api/*": ["src/api/*"],
      "@/*": ["src/*"],

      "@test/*": ["test/*"]
    },
    "types": ["@types/node", "@types/jest", "jest"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["**/*", ".eslintrc.json", "modules.d.ts"]
}
